<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Takanak !</title>
  <%= stylesheet_link_tag    "960", :media => "all" %>
  <%= stylesheet_link_tag    "style", :media => "all" %>
  <%= stylesheet_link_tag    "custom", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "jquery" %>
  <%= javascript_include_tag "jquery.fejax" %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
</head>
<body>

<div id="container" class="container_16">
  <div class="header grid_15">
    <div class="grid_9" id="logo">
    <a href="/">Takanak</a>
    </div>


    <!-- TODO: Implement edilecek
    <div class="grid_5">
      <a href="#" id="header-total">
        Toplam alacağınız
        <span>{} TL</span>
      </a>
    </div>
    -->
    <div class="clear"></div>
</div>
<div id="content">
  <div class='grid_15'>

    <% if current_user %>
    <ul id="navigation" class="grid_15">
    <li class="<%='active' if controller_name == 'friends'%>"><%=link_to 'Arkadaşların', friends_path%></li>
    <li class="<%='active' if params['status'] == 'not_paid'%>"><%=link_to 'Ödenmemiş Borçlar', debits_path(:status=>'not_paid')%></li>
    <li class="<%='active' if params['status'] == 'paid'%>"><%=link_to 'Ödenenler', debits_path(:status=>'paid')%></li>
    <li class="<%='active' if controller_name == 'analyze'%>"><%=link_to 'Arkadaş Analizi', '/analyze' %></li>
    <li style='float:right'> <%= link_to "Çıkış", signout_path %></li>
    </ul>
<div class="clear"></div>
        <% if !notice.nil? %>
                   <div class='grid_15 alpha' id="notice"><p><%= notice %></p></div>
               <% end %>

    <% end %>

    <%= yield %>

  </div>
 </div>

  <div class="grid_15" id="footer">
    <p>&copy; 2012 - BORÇ YİĞİDİN KAMÇISIDIR LTD. ŞTİ.</p>
  </div>
</div>

<script>
  $(function () {
      // eger javascript pasif durumda ise normal sekilde,
      // javascript aktif ise ajax ile yuklenecek projemiz.
      // evet evet tek satirda. o da soyle;
      $("#container").fejax();
  })
</script>

<!-- twitter configuration -->
 <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
</body>
</html>
